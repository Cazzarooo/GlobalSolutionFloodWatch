@model GlobalSolution.Models.SensorModel

<h2>Edit Sensor</h2>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdSensor" />

    <div class="form-group">
        <label asp-for="DadosSensor" class="control-label"></label>
        <input asp-for="DadosSensor" class="form-control" />
        <span asp-validation-for="DadosSensor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LocalizacaoSensor" class="control-label"></label>
        <input asp-for="LocalizacaoSensor" class="form-control" />
        <span asp-validation-for="LocalizacaoSensor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

